{
  "name": "react2048",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://ahmetkuslular.github.io/react-2048/",
  "dependencies": {
    "gh-pages": "^2.1.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "styled-components": "^4.3.2"
  },
  "scripts": {
    "start": "NODE_PATH=src:src/components react-scripts start",
    "build": "react-scripts build",
    "test": "NODE_PATH=src:src/components jest --env=jsdom",
    "eject": "react-scripts eject",
    "format": "prettier \"src/**/*.{js,html}\" --write",
    "predeploy": "NODE_PATH=src:src/components yarn build",
    "deploy": "NODE_PATH=src:src/components gh-pages -d build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.9.0",
    "enzyme": "^3.10.0",
    "enzyme-to-json": "^3.4.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "jest": "24.7.1",
    "prettier": "1.18.2"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./jestSetup.js"
    ]
  }
}
